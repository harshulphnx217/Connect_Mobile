<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/connect_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:orientation="vertical"
                android:background="@drawable/registration_card_layout"
                android:elevation="10dp"
                android:padding="10dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/register"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/phone_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:maxLength="10"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/first_name_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/first_name"
                    android:inputType="text"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/last_name_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/last_name"
                    android:inputType="text"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/address_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/address"
                    android:inputType="text"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/email_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/password_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/confirm_password_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/reg_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/date_of_birth"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="date"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <EditText
                    android:id="@+id/reg_country_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/input_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/country_of_residence"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

                <CheckBox
                    android:id="@+id/tnc_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tnc"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_background_layout"
                    android:fontFamily="@font/poppins_regular"
                    android:shadowColor="@color/black"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>